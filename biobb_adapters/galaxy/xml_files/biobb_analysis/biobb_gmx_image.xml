          <param name="input_top_path" type="data" format="tpr,gro,g96,pdb,brk,ent"  optional="False" label="input TPR,GRO,G96,PDB,BRK,ENT file" help="Path to the GROMACS input topology file. Format: [input].[format]"/> 
        
