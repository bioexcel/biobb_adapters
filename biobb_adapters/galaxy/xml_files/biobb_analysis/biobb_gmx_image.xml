<tool id="biobb_analysis_gmx_image_ext" name="GmxImage" version="3.0.0" >
    <description>: Wrapper of the GROMACS trjconv module for correcting periodicity (image) from a given GROMACS compatible trajectory file.</description>
    <requirements>
        <requirement type="package">biobb_analysis</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
          ln -f -s ${input_traj_path} ${input_traj_path}.${input_traj_path.ext};
        
          ln -f -s ${input_top_path} ${input_top_path}.${input_top_path.ext};
        
          ln -f -s ${input_index_path} ${input_index_path}.${input_index_path.ext};
        
        #if $config.sele == "option1":
          ln -s -f ${config.properties} ${config.properties}.${config.properties.ext};
        #end if
        gmx_image
        #if $config.sele == "option1":
          --config ${config.properties}.${config.properties.ext}
        #else if $config.sele == "option2":
          --config '${config.jsonstr}'
        #else if $config.sele == "option3":
          --config "__oc____dq__fit_selection__dq__:__dq__${config.fit_selection}__dq__,__dq__center_selection__dq__:__dq__${config.center_selection}__dq__,__dq__output_selection__dq__:__dq__${config.output_selection}__dq__,__dq__pbc__dq__:__dq__${config.pbc}__dq__,__dq__center__dq__:${config.center},__dq__ur__dq__:__dq__${config.ur}__dq__,__dq__fit__dq__:__dq__${config.fit}__dq__,__dq__gmx_path__dq__:__dq__${config.gmx_path}__dq____cc__"
        #end if
        
        #if str($input_traj_path) != 'None':
          --input_traj_path ${input_traj_path}.${input_traj_path.ext}
        #end if
        
        #if str($input_top_path) != 'None':
          --input_top_path ${input_top_path}.${input_top_path.ext}
        #end if
        
        #if str($input_index_path) != 'None':
          --input_index_path ${input_index_path}.${input_index_path.ext}
        #end if
        
        
          --output_traj_path $__new_file_path__/$outname_output_traj_path
        ;          
        #if $config.sele == "option1":
          rm -f ${config.properties}.${config.properties.ext};
        #end if
        
          rm -f ${input_traj_path}.${input_traj_path.ext};
        
          rm -f ${input_top_path}.${input_top_path.ext};
        
          rm -f ${input_index_path}.${input_index_path.ext};
        
        
          if test -f $__new_file_path__/$outname_output_traj_path; then mv $__new_file_path__/$outname_output_traj_path $output_traj_path; fi;
        
    ]]>
    </command>
