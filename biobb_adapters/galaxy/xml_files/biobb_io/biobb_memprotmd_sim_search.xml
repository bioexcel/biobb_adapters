<tool id="biobb_io_memprotmd_sim_search_ext" name="MemprotmdSimSearch" version="3.0.0" >
    <description>: This class is a wrapper of the MemProtMD to perform advanced searches in the MemProtMD DB using its REST API.</description>
    <requirements>
        <requirement type="package">biobb_io</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
        #if $config.sele == "option1":
          ln -s -f ${config.properties} ${config.properties}.${config.properties.ext};
        #end if
        memprotmd_sim_search
        #if $config.sele == "option1":
          --config ${config.properties}.${config.properties.ext}
        #else if $config.sele == "option2":
          --config '${config.jsonstr}'
        #else if $config.sele == "option3":
          --config "__oc____dq__collection_name__dq__:__dq__${config.collection_name}__dq__,__dq__keyword__dq__:__dq__${config.keyword}__dq____cc__"
        #end if
        
        
          --output_simulations $__new_file_path__/$outname_output_simulations
        ;          
        #if $config.sele == "option1":
          rm -f ${config.properties}.${config.properties.ext};
        #end if
        
        
          if test -f $__new_file_path__/$outname_output_simulations; then mv $__new_file_path__/$outname_output_simulations $output_simulations; fi;
        
    ]]>
    </command>
    <inputs>
        
        
          <param name="outname_output_simulations" type="text" value="mymemprotmd_sim_search.json" optional="False" label="output JSON name" help="Path to the output JSON file Format: [output].json "/>
        
        <conditional name="config">
            <param name="sele" type="select" label="Take tool settings:" help="Select where tool settings are to be read from">
                <option value="option1">from configuration file</option>
                <option value="option2">from JSON string</option>
                <option value="option3">manual input</option>
            </param>
            <when value="option1">
                <param name="properties" type="data" format="yml,json" optional="false" label="Configuration file" help="File containing tool settings. See below for the syntax"/>
            </when>
            <when value="option2">
                <param name="jsonstr" type="text" value="{}" optional="false" label="JSON string" help="JSON string containing tool settings. See below for the syntax"/>
            </when>
            <when value="option3">
                
                  <param name="collection_name" type="text" value="refs" label="collection_name" help="Name of the collection to query." optional="false"/>
                
                  <param name="keyword" type="select" label="keyword" help="String to search for in the database metadata. Examples are families like gpcr or porin. ">
                    
                      <option value="porin" 
                      
                      >porin</option>
                    
                      <option value="outer membrane protein" 
                      
                      >outer membrane protein</option>
                    
                      <option value="membrane protein" 
                      
                      >membrane protein</option>
                    
                      <option value="gpcr" 
                      
                      >gpcr</option>
                    
                      <option value="ion channels" 
                      
                      >ion channels</option>
                    
                      <option value="rhodopsin" 
                      
                      >rhodopsin</option>
                    
                      <option value="abc" 
                      
                      >abc</option>
                    
                      <option value="mip" 
                      
                      >mip</option>
                    
                      <option value="ligand-gated" 
                      
                      >ligand-gated</option>
                    
                      <option value="ammonia" 
                      
                      >ammonia</option>
                    
                      <option value="mapeg" 
                      
                      >mapeg</option>
                    
                      <option value="transmembrane" 
                      
                      >transmembrane</option>
                    
                      <option value="protein" 
                      
                      >protein</option>
                    
                      <option value="kinase" 
                      
                      >kinase</option>
                    
                      <option value="glycoprotein" 
                      
                      >glycoprotein</option>
                    
                      <option value="immunoglobulin" 
                      
                      >immunoglobulin</option>
                    
                      <option value="integrin" 
                      
                      >integrin</option>
                    
                      <option value="bnip3" 
                      
                      >bnip3</option>
                    
                      <option value="bcl-2" 
                      
                      >bcl-2</option>
                    
                      <option value="atpase" 
                      
                      >atpase</option>
                    
                      <option value="cytochrome" 
                      
                      >cytochrome</option>
                    
                      <option value="nadp" 
                      
                      >nadp</option>
                    
                      <option value="a4" 
                      
                      >a4</option>
                    
                      <option value="lysosome" 
                      
                      >lysosome</option>
                    
                      <option value="necrosis" 
                      
                      >necrosis</option>
                    
                      <option value="oxidoreductase" 
                      
                      >oxidoreductase</option>
                    
                      <option value="ceramidase" 
                      
                      >ceramidase</option>
                    
                      <option value="dehydrogenase" 
                      
                      >dehydrogenase</option>
                    
                      <option value="mitochondrial" 
                      
                      >mitochondrial</option>
                    
                      <option value="plastid" 
                      
                      >plastid</option>
                    
                    </param>
                
            </when>
        </conditional>
    </inputs>
    <outputs>
        
        <data name="output_simulations" format="json" label="${outname_output_simulations}"/>
        
    </outputs>
    <tests>
        <test>
        </test>
    </tests>    
